<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/createInv.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <title><%=pageTitle%></title>
</head>
<body>
    <div class="container-fluid px-5 py-5 mx-auto">
        <div class="mt-3 mb-4">
            <div class="row d-flex justify-content-center mb-4">
            <h1 style="font-size: 3.5rem;letter-spacing:6px;font-weight: bold; color: rgb(250, 250, 250);">View Invoices</h1>
            </div>
            <div class="row justify-content-between text-left ml-1 mr-1">
                <table class="table activitites">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class="text-uppercase">Invoice No.</th>
                            <th scope="col" class="text-uppercase">created</th>
                            <th scope="col" class="text-uppercase">Customer Name</th>
                            <th scope="col" class="text-uppercase">Due Date</th>
                            <th scope="col" class="text-uppercase">amount(₹)</th>
                            <th scope="col" class="text-uppercase">status</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class=" table-dark">
                        <%for(const invoice of invoices){%>
                        <tr class="" id="invoices">
                            <td>
                                <div id="invoiceId"><%=invoice._id%></div>
                            </td>
                            <td><%=invoice.invoiceDate.getDate()+"-"+invoice.invoiceDate.getMonth()+"-"+invoice.invoiceDate.getFullYear()%></td>
                            <td class="d-flex flex-column"><span class="red"><%=invoice.customerName%></span> </td>
                            <td><%=invoice.dueDate.getDate()+"-"+invoice.dueDate.getMonth()+"-"+invoice.dueDate.getFullYear()%></td>
                            <td><%="₹"+invoice.totalAmt%></td>
                            <td><%=invoice.status%></td>
                            <td><button type="button" id="mailInvoice" name="mailInvoice" value="<%=invoice.customerEmail%>" class="btn btn-secondary mb-3 btn-block" >Mail</button></td>
                            <td><select class="d-none" id="selectStatus">
                                <option hidden selected></option>
                                <option value="paid">paid</option>
                                <option value="unpaid">unpaid</option>
                                <option value="overdue">overdue</option>
                            </select><button type="button" id="changeStatus" class="btn btn-primary btn-sm mb-3 d-" >Change Status</button></td>
                        </tr>
                        <% } %> 
                    </tbody>
                </table>
        </div>
    </div>
    </div>
    <script src="/js/viewInvoiceClient.js"></script>
</body>
</html>